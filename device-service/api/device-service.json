{
  "openapi": "3.1.0",
  "info": {
    "title": "Device Management API",
    "version": "v0",
    "description": "API for managing devices. Все endpoints требуют JWT токена авторизации из Keycloak."
  },
  "servers": [
    {
      "url": "http://localhost:8090",
      "description": "Generated server url"
    }
  ],
  "paths": {
    "/v1/devices/{id}": {
      "get": {
        "tags": [
          "device"
        ],
        "operationId": "getDeviceById",
        "summary": "Получить устройство по ID",
        "description": "Получение информации об устройстве по его идентификатору. Требуется JWT токен авторизации из Keycloak.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID устройства"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DeviceResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - JWT токен отсутствует или невалиден"
          },
          "403": {
            "description": "Forbidden - недостаточно прав"
          },
          "404": {
            "description": "Device not found"
          }
        }
      },
      "put": {
        "tags": [
          "device"
        ],
        "operationId": "updateDevice",
        "summary": "Обновить устройство",
        "description": "Обновление информации об устройстве. Требуется JWT токен авторизации из Keycloak.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID устройства"
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/DeviceRequest"
              }
            }
          },
          "required": true,
          "description": "Данные устройства для обновления"
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DeviceResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request - невалидные данные"
          },
          "401": {
            "description": "Unauthorized - JWT токен отсутствует или невалиден"
          },
          "403": {
            "description": "Forbidden - недостаточно прав"
          },
          "404": {
            "description": "Device not found"
          }
        }
      },
      "delete": {
        "tags": [
          "device"
        ],
        "operationId": "deleteDeviceById",
        "summary": "Удалить устройство",
        "description": "Удаление устройства по ID. Требуется JWT токен авторизации из Keycloak.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID устройства"
          }
        ],
        "responses": {
          "200": {
            "description": "OK - устройство успешно удалено"
          },
          "401": {
            "description": "Unauthorized - JWT токен отсутствует или невалиден"
          },
          "403": {
            "description": "Forbidden - недостаточно прав"
          },
          "404": {
            "description": "Device not found"
          }
        }
      }
    },
    "/v1/devices": {
      "get": {
        "tags": [
          "device"
        ],
        "operationId": "getDevices",
        "summary": "Получить список всех устройств",
        "description": "Получение списка всех устройств. Требуется JWT токен авторизации из Keycloak с scope 'read'.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/DeviceResponse"
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - JWT токен отсутствует или невалиден"
          },
          "403": {
            "description": "Forbidden - недостаточно прав (требуется scope 'read')"
          }
        }
      },
      "post": {
        "tags": [
          "device"
        ],
        "operationId": "createDevice",
        "summary": "Создать новое устройство",
        "description": "Создание нового устройства. Требуется JWT токен авторизации из Keycloak.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/DeviceRequest"
              }
            }
          },
          "required": true,
          "description": "Данные нового устройства"
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DeviceResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request - невалидные данные"
          },
          "401": {
            "description": "Unauthorized - JWT токен отсутствует или невалиден"
          },
          "403": {
            "description": "Forbidden - недостаточно прав"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "DeviceRequest": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Идентификатор устройства"
          },
          "deviceType": {
            "type": "string",
            "description": "Тип устройства"
          },
          "createdAt": {
            "type": "integer",
            "format": "int64",
            "description": "Время создания в миллисекундах с эпохи Unix"
          },
          "meta": {
            "type": "string",
            "description": "Метаданные устройства в формате JSON"
          },
          "idempotenceKey": {
            "type": "string",
            "description": "Метаданные устройства в формате JSON"
          },
          "targetVersion": {
            "type": "string",
            "description": "Метаданные устройства в формате JSON"
          }
        }
      },
      "DeviceResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Идентификатор устройства"
          },
          "deviceType": {
            "type": "string",
            "description": "Тип устройства"
          },
          "createdAt": {
            "type": "integer",
            "format": "int64",
            "description": "Время создания в миллисекундах с эпохи Unix"
          },
          "meta": {
            "type": "string",
            "description": "Метаданные устройства в формате JSON"
          },
          "idempotenceKey": {
            "type": "string",
            "description": "Метаданные устройства в формате JSON"
          },
          "oldTargetVersion": {
            "type": "string",
            "description": "Метаданные устройства в формате JSON"
          },
          "newTargetVersion": {
            "type": "string",
            "description": "Метаданные устройства в формате JSON"
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "JWT токен авторизации из Keycloak. Получите токен через Keycloak OAuth2 flow и передавайте в заголовке: Authorization: Bearer {token}"
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ]
}